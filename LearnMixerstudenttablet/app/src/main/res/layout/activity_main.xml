<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ffbbfff5"
    android:id="@+id/">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/frameLayout">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="643dp"
            android:layout_gravity="left|top"
            android:id="@+id/"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="LearnMixer Student"
                android:id="@+id/textView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Subject"
                android:id="@+id/textView3" />

            <ExpandableListView
                android:layout_width="1162dp"
                android:layout_height="189dp"
                android:id="@+id/expandableListView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Collection"
                android:id="@+id/textView4" />

            <ExpandableListView
                android:layout_width="match_parent"
                android:layout_height="256dp"
                android:id="@+id/expandableListView2" />

            <Button
                android:layout_width="366dp"
                android:layout_height="69dp"
                android:text="OK"
                android:id="@+id/button"
                android:layout_gravity="center_horizontal"
                android:background="#ffff6217"
                android:textAppearance="@android:color/black"
                android:textSize="@android:dimen/notification_large_icon_width" />

        </LinearLayout>

        <Button
            android:layout_width="374dp"
            android:layout_height="61dp"
            android:text="Recommendation"
            android:id="@+id/button2"
            android:layout_gravity="center_horizontal|bottom"
            android:background="#ff5caf2d" />

    </FrameLayout>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/frameLayout"
        android:layout_alignEnd="@+id/frameLayout"
        android:layout_marginRight="1033dp"
        android:layout_marginEnd="1033dp" />
</RelativeLayout>
